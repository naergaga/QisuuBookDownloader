<Window x:Class="QisuuBookDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QisuuBookDownloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <Button DockPanel.Dock="Right" Click="Button_Click">下载</Button>
                <TextBox Name="TbUrl"></TextBox>
            </DockPanel>
            <ScrollViewer>
                <TextBlock Name="TbInfo" TextWrapping="Wrap"></TextBlock>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
